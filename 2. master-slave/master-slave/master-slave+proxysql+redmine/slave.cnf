[mysqld]
# Replication Settings
log-bin=mysql-bin
relay-log=slave-relay-bin
log-slave-updates=1
master-info-repository=TABLE
relay-log-info-repository=TABLE
read_only=ON
super_read_only=ON

# GTID Settings
gtid_mode=ON
enforce_gtid_consistency=ON
binlog_format=ROW

# Skip auto start slave
skip-slave-start=1